{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/core/components/*"],
      "@types/*": ["src/core/types/*"]
    },
    "outDir": "./dist"
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"]
}

